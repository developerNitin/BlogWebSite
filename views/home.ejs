<%- include("partials/home-header"); -%>


<div class="about-div">
  <div class="container">
    <h1 class="heading"> NitinBlog </h1>
    <p><%= homeStartingContent %></p>
  </div>
</div>

<div class="container middle-container">

<% for(var i = 0; i < posts.length; i++) { %>
<h1 class="heading"> <%= posts[i].input %> </h1>

<p>
  <% if(posts[i].post.length > 100) { %>
  <%= posts[i].post.substring(0, 100) %>
  <a href="/post/<%= posts[i].input %>">read more.</a>
  <% } else { %>
  <%= posts[i].post %>
  <% } %>
</p>

<% } %>


<% if(posts.length != 0) { %>
  <form action="/" method="post">
    <button class="btn btn-warning resetbtn" type="submit" name="reset"> Reset </button>
  </form>
<% } %>


<%- include("partials/footer"); -%>




